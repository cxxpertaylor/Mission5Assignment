<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0" style="background-color: #f0fdfa; color: #0f766e;">
                <div class="card-body">
                    <h2 class="text-center mb-4 fw-bold" style="color: #1e3a8a;">Tutoring Cost Calculator</h2>

                    <!-- Hours Input -->
                    <div class="mb-3">
                        <label for="hours" class="form-label">Hours Needed:</label>
                        <input type="number" id="hours" class="form-control" min="1" placeholder="Enter hours" style="border: 1px solid #1e3a8a;">
                    </div>

                    <!-- Hourly Rate (Disabled) -->
                    <div class="mb-3">
                        <label for="rate" class="form-label">Hourly Rate ($):</label>
                        <input type="text" id="rate" class="form-control" value="20" disabled style="border: 1px solid #1e3a8a;">
                    </div>

                    <!-- Calculate Button -->
                    <div class="d-grid">
                        <button id="calculate" class="btn" style="background-color: #0f766e; color: white;">Calculate Total</button>
                    </div>

                    <!-- Total Cost Output -->
                    <h2 class="mt-4 text-center">
                        Total: <span id="total" class="badge" style="background-color: #1e3a8a; color: #f0fdfa; font-size: 1.5rem;">$0.00</span>
                    </h2>

                    <!-- Back to Home -->
                    <div class="text-center mt-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark">Back to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
